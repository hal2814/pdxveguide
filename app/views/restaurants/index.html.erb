<% @restaurants.each do |restaurant| %>
<div class="row">
  <div class="col s4">
    <div class="card">
      <div class="card-image">
        <%= image_tag("restaurant.jpg", class: "listing-image") %>
        <div class="card-content listing-font listing-image-card-med">
          <h5><%= link_to restaurant.title, restaurant_path(restaurant.id) %></h5>
          <p><%= restaurant.restaurant_type %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="col s4">
    <div class="card">
      <div class="card-content listing-font listing-card-med">
        <p><%= restaurant.website %></p>
        <p><%= restaurant.online_menu %></p>
      </div>
    </div>
  </div>
  <div class="col s4">
    <div class="card">
      <div class="card-content listing-font listing-card-med">
        <p><%= restaurant.location %></p>
        <p><%= restaurant.hours %></p>
      </div>
    </div>
  </div>
</div>
<% end %>
<div class="footer-space"></div>
<%= will_paginate @restaurants %>
<div class="footer-space"></div>
<br>
